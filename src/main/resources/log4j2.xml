<?xml version="1.0" encoding="UTF-8"?> 
<Configuration>
 <!--    해당 설정파일에서 사용하는 프로퍼티-->
     <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>
  </Appenders>
   
	 <!-- Application Loggers -->
	 <Loggers> 
	   	<Logger name="com.myproject" level="TRACE" additivity="false">
	    	<AppenderRef ref="STDOUT" />
	    </Logger> 
	   	<Logger name="java.sql.Connection" level="debug" additivity="false">
	    	<AppenderRef ref="STDOUT" />
	    </Logger> 
	   	<Logger name="java.sql.Statement" level="debug" additivity="false">
	    	<AppenderRef ref="STDOUT" />
	    </Logger> 
	   	<Logger name="java.sql.PreparedStatement" level="debug" additivity="false">
	    	<AppenderRef ref="STDOUT" />
	    </Logger> 
	   	<Logger name="java.sql.ResultSet" level="debug" additivity="false">
	    	<AppenderRef ref="STDOUT" />
	    </Logger> 
		
	   	<Logger name="oracle.mybatis" level="TRACE" additivity="false">
	    	<AppenderRef ref="STDOUT" />
	    </Logger> 
	    <Logger name="org.springframework.core" level="DEBUG" additivity="false"> 
	    	<AppenderRef ref="STDOUT" /> 
	    </Logger> 
	    <Logger name="org.springframework.beans" level="DEBUG" additivity="false"> 
	    	<AppenderRef ref="STDOUT" /> 
	    </Logger> 
	    <Logger name="org.springframework.context" level="DEBUG" additivity="false"> 
	   		<AppenderRef ref="STDOUT" /> 
	    </Logger>
	 	<Logger name="org.springframework.web" level="DEBUG" additivity="false"> 
	    	<AppenderRef ref="STDOUT" /> 
	    </Logger>
	    <Logger name="org.springframework" level="DEBUG" additivity="false"> 
	    	<AppenderRef ref="STDOUT" /> 
	    </Logger> 
	    
	    <root level="debug">
	  		 <appender-ref ref="STDOUT" />
	  	</root>
	    
	 </Loggers>
</Configuration>